@{
    ViewBag.Title = "Index";
}
<h3>Lista de Estados</h3>
<div class="row">
    <div class="col-12 p-0">
        <a href="/cidade/cadastro" class="btn btn-primary float-left mb-3">
            <i class="fas fa-plus"></i> Nova Cidade
        </a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Número de Hab.</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Número de Hab.</th>
                <th>Ação</th>

            </tr>
        </tfoot>
        <tbody>

            @foreach (Model.Cidade cidade in ViewBag.Cidade)
            {
                <tr>
                    <td class="text-center">@cidade.Id</td>
                    <td class="text-center">@cidade.Nome</td>
                    <td class="text-center">@cidade.NumeroHabitantes</td>
                    <td>
                        <div class="btn-group center " role="group">
                            <a href="/cidade/editar?id=@cidade.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="/cidade/apagar?id=@cidade.Id" class="btn btn-danger">
                                <i class="far fa-trash"></i> Apagar
                            </a>
                        </div>


                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>

