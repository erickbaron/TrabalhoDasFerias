
@{
    ViewBag.Title = "Cadastro";}

<h3>Cadastro de Estados</h3>
<div class="row">
    <a href="/estado/index" class="btn btn-primary float-left mb-3 far ">
        Lista de Estados
    </a>
</div>
<div class="row">

    <form action="/estado/store" method="post">
        <div>
            <label for="campo-nome" class="col-3 pl-0">Nome</label>
            <input type="text" name="nome" id="campo-nome" />
        </div>
        <div>
            <label for="campo-sigla" class="col-3 pl-0">Sigla</label>
            <input type="text" name="sigla" id="campo-sigla" />
        </div>


        <button class="btn btn-success mt-3" type="submit">Salvar</button>
    </form>
</div>
