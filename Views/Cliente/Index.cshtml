
@{
    ViewBag.Title = "Index";
}
<h3>Lista de Clientes</h3>
<div class="row">
    <div class="p-0 col-12">
        <a href="/cliente/cadastro" class="btn btn-primary float-left mb-3">
            <i class="fas fa-plus"></i> Novo Cliente
        </a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Número de Hab.</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Número de Hab.</th>
                <th>Ação</th>

            </tr>
        </tfoot>
        <tbody>

            @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.IdCidade</td>
                <td>@cliente.Numero</td>
                <td>@cliente.Complemento</td>
                <td>@cliente.Logradouro</td>
                <td>@cliente.Cep</td>
                <td>
                    <a href="/categoria/editar?id=@cliente.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/categoria/apagar?id=@cliente.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>

